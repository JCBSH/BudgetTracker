<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:transformPivotX = "@dimen/transaction_filter_left_date_transformX"
            android:transformPivotY = "@dimen/transaction_filter_date_transformY"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            android:layout_alignParentLeft="true"/>
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:transformPivotX = "@dimen/transaction_filter_right_date_transformX"
            android:transformPivotY = "@dimen/transaction_filter_date_transformY"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <EditText
        android:id="@+id/transaction_filter_recipient_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_standard_1_margin"
        android:hint="@string/transaction_recipient_hint" />
    <EditText
        android:id="@+id/transaction_filter_amount_EditText"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_standard_1_margin"
        android:hint="@string/transaction_amount_hint" />
    <EditText
        android:id="@+id/transaction_filter_description_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_standard_1_margin"
        android:hint="@string/transaction_description_keywords_hint" />
</LinearLayout>