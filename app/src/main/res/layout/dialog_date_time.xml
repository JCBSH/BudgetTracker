<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <DatePicker
                android:id="@+id/dialog_date_datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:transformPivotX = "20sp"
                android:transformPivotY = "125sp"
                android:calendarViewShown="false"
                android:spinnersShown="true"
                android:layout_alignParentLeft="true">
    </DatePicker>
    <TimePicker
                android:id="@+id/dialog_date_timePicker"
                android:spinnersShown="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:transformPivotX = "180sp"
                android:transformPivotY = "125sp"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/dialog_date_datePicker">
    </TimePicker>

</RelativeLayout>